    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ClinicaStomatologicaApp"
    Shell.FlyoutBehavior="Disabled"
    Title="ClinicaStomatologicaApp">

    <TabBar>
        <ShellContent Title="Welcome" ContentTemplate="{DataTemplate local:WelcomePage}" />
